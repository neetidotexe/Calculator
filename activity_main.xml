<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/text_result"
            android:textSize="50sp"
            android:textAlignment="center"
            android:background="@android:color/background_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_1"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            android:layout_marginTop="208dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/text_result"/>

    <Button
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_2"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/text_result" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/button_1" android:layout_marginStart="100dp"/>

    <Button
            android:text="3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_3"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/text_result" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/button_2" android:layout_marginStart="100dp"/>

    <Button
            android:text="+"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_plus"
            android:textSize="40sp" android:background="@android:color/holo_green_light"
            app:layout_constraintTop_toBottomOf="@id/text_result" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/button_3" android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_4"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/button_1"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_5"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/button_2"
            app:layout_constraintStart_toStartOf="@id/button_4" android:layout_marginStart="100dp"/>

    <Button
            android:text="6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_6"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/button_3"
            app:layout_constraintStart_toStartOf="@id/button_5" android:layout_marginStart="100dp"/>

    <Button
            android:text="-"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_minus"
            android:textSize="40sp" android:background="@android:color/holo_green_light"
            app:layout_constraintTop_toBottomOf="@id/button_plus"
            app:layout_constraintStart_toStartOf="@id/button_6" android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_7"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/button_4"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_8"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/button_5"
            app:layout_constraintStart_toStartOf="@id/button_7" android:layout_marginStart="100dp"/>

    <Button
            android:text="9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_9"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/button_6"
            app:layout_constraintStart_toStartOf="@id/button_8" android:layout_marginStart="100dp"/>

    <Button
            android:text="x"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_multiply"
            android:textSize="40sp" android:background="@android:color/holo_green_light"
            app:layout_constraintTop_toBottomOf="@id/button_minus"
            app:layout_constraintStart_toStartOf="@id/button_9" android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:text="Clr"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_clear"
            android:textSize="40sp" android:background="@android:color/holo_orange_dark"
            app:layout_constraintTop_toBottomOf="@id/button_7"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_0"
            android:textSize="40sp" android:background="@android:color/holo_blue_dark"
            app:layout_constraintTop_toBottomOf="@id/button_8"
            app:layout_constraintStart_toStartOf="@id/button_clear" android:layout_marginStart="100dp"/>

    <Button
            android:text="="
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_equal"
            android:textSize="40sp" android:background="@android:color/holo_orange_dark"
            app:layout_constraintTop_toBottomOf="@id/button_9"
            app:layout_constraintStart_toStartOf="@id/button_0" android:layout_marginStart="100dp"/>

    <Button
            android:text="/"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button_divide"
            android:textSize="40sp" android:background="@android:color/holo_green_light"
            tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_multiply"
            app:layout_constraintStart_toStartOf="@id/button_equal" android:layout_marginStart="100dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>