<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">
        <TextView
                android:layout_width="326dp"
                android:layout_height="61dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/text_result" android:textAlignment="center" android:textSize="24sp"/>

        <Button
                android:text="1"
                android:layout_width="60dp"
                android:layout_height="48dp" android:id="@+id/button_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/text_result"
                android:width="48dp" app:layout_constraintEnd_toStartOf="@+id/button_2"
                android:layout_marginEnd="16dp"/>
        <Button
                android:text="2"
                android:layout_width="60dp"
                android:layout_height="48dp" android:id="@+id/button_2"
                android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/button_1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="247dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/text_result"
                android:width="48dp"/>

        <Button
                android:text="3"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_3" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/button_2" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="44dp" app:layout_constraintHorizontal_bias="0.083"/>
        <Button
                android:text="4"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_4" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/button_3" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result"
                app:layout_constraintEnd_toEndOf="@+id/button_5" android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.224"/>

        <Button
                android:text="5"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_5"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <Button
                android:text="6"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="88dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result"/>

        <Button
                android:text="7"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_7"
                android:layout_marginTop="88dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/button_6"/>

        <Button
                android:text="8"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_8" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/button_7" android:layout_marginTop="88dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="44dp" app:layout_constraintHorizontal_bias="0.083"/>

        <Button
                android:text="9"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_9" android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/button_8" android:layout_marginTop="88dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result"/>

        <Button
                android:text="0"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_0" android:layout_marginStart="8dp"
                android:layout_marginTop="88dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <Button
                android:text="+"
                android:layout_width="60dp"
                android:layout_height="48dp" android:id="@+id/button_plus"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="156dp" app:layout_constraintTop_toBottomOf="@+id/text_result"
                android:width="48dp"/>

        <Button
                android:text="-"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_minus"
                android:layout_marginTop="156dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/button_plus"/>

        <Button
                android:text="*"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_multiply" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/button_minus" android:layout_marginTop="156dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="44dp" app:layout_constraintHorizontal_bias="0.083"/>

        <Button
                android:text="/"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_divide" android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/button_multiply" android:layout_marginTop="156dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result"/>

        <Button
                android:text="="
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:id="@+id/button_equal" android:layout_marginStart="8dp"
                android:layout_marginTop="156dp"
                app:layout_constraintTop_toBottomOf="@+id/text_result" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="C"
                android:layout_width="61dp"
                android:layout_height="43dp" android:id="@+id/button_clear"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@+id/button_plus" android:textSize="18sp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>